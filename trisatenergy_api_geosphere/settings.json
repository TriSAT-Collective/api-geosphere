{
  "AppSettings": {
    "GeoSphereApiClient": {
      "BaseUrl": "https://dataset.api.hub.geosphere.at/v1"
    },
    "MongoDB": {
      "ConnectionString": "mongodb://root:password@localhost:27017",
      "DatabaseName": "weather_db",
      "Collections": {
        "TimeseriesHistorical": "timeseries_historical",
        "TimeseriesForecast": "timeseries_forecast"
      }
    },
    "Misc": {
      "ContinuousPullnStore": true,
      "ContinuousPullnStoreIntervalMs": 3600000, //1 hour
      "OnceOffPullnStoreHours": 48 //2 days historical, 2 days forecast
    }
  }
}